{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",                    // ðŸ‘ˆ mÃ¡s compatible con herramientas modernas
    "declaration": true,
    "removeComments": true,
    "experimentalDecorators": true,       // âœ… Necesario para @decorators
    "emitDecoratorMetadata": true,        // âœ… Necesario para class-validator
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,                       // ðŸ‘Œ buena prÃ¡ctica
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,                // âœ… Mejora seguridad de tipos
    "strictBindCallApply": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",           // âœ… Recomendado para NestJS
    "esModuleInterop": true               // âœ… Para que Swagger y otros paquetes trabajen bien
  }
}
